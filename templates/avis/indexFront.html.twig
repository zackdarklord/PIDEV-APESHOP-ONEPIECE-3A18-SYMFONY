
{% extends 'base-front.html.twig' %}



{% block body %}





    <main id="main" class="main">




        <h1 style="color: #0a53be">Liste des avis</h1>

        <section class="section">
            <div class="row">
                <div class="col-lg-12">

                    <div class="card">

                        <div class="card-body">


                            <!-- Table with stripped rows -->

                            <div class="dataTable-top">


                            </div>
                            <div class="dataTable-container">
                                <table class="table datatable dataTable-table">

                                    <thead>
                                    <tr>

                                        <th scope="col" data-sortable="" style="width: 10%;">
                                            <a href="#" class="dataTable-sorter">Num User</a>
                                        </th>
                                        <th scope="col" data-sortable="" style="width: 20%;" class="desc">
                                            <a href="#" class="dataTable-sorter">Categorie</a>
                                        </th>
                                        <th scope="col" data-sortable="" >
                                            <a href="#" class="dataTable-sorter">Avis</a>
                                        </th>
                                        <th scope="col" data-sortable="" style="width: 5%;">

                                        </th>
                                        <th scope="col" data-sortable="" style="width: 5%;">

                                        </th>

                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for avi in avis %}
                                        <tr>
                                            <td style="font-weight: bolder">{{ avi.numeroutilisateur }}</td>
                                            {#<td>{{ avi.idavis }}</td>#}
                                            <td>{{ avi.nomcategorie }}</td>
                                            <td>{{ avi.contenuavis }}</td>


                                            <td> <button style="background-color: initial;font-weight: bolder" class="btn btn-primary"> <a   href="{{ path('app_avis_edit', {'idavis': avi.idavis}) }}">Modifier</a> </button></td>

                                            <td> <a> {{ include('avis/_delete_form.html.twig') }} </a> </td>

                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="3">no records found</td>
                                        </tr>
                                    {% endfor %}

                                    </tbody>
                                </table>
                            </div>

                            <!-- End Table with stripped rows -->
                            <div class="dataTable-search" >
                                <input class="dataTable-input" placeholder="rechercher..." type="text" style="border-color: #0a53be;width: 15%">  </div>

                        </div>
                        <br>
                    </div>
                </div>

            </div>
            </div>
        </section>
    </main><!-- End #main -->
{% endblock %}