{% extends 'base.html.twig' %}

{% block title %}Edit Repavis{% endblock %}

{% block body %}
    <h1>Edit Repavis</h1>

    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Traitement d'une Reponse</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">Reponse</li>
                    <li class="breadcrumb-item"><a href="{{ path('app_repavis_index') }}">list</a></li>
                    <li class="breadcrumb-item active">ajout</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->

        <section class="section">
            <div class="row">
                <div class="col-lg-6">

                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Traitement</h5>

                            <!-- General Form Elements -->
                            {{ form_start(form ,{ attr: {novalidate:'novalidate' } }) }}

                            <div class="row mb-3">

                               <h5> Voulez vous traiter cette demande ? <br> <i class="bi bi-envelope"> un mail sera envoyer au client .  </i>  </h5>
                                <div class="row mb-3">

                                    <div class="col-sm-10">
                                        {{ form_widget(form.etat, { 'attr': {'class':'form-select' } }) }}
                                        {{ form_errors(form.etat    , { 'attr': {'class':'text-danger' } }) }}
                                    </div>
                                </div>


                                <div class="row mb-3">

                                    <div class="col-sm-10">
                                        <a class="btn btn-primary" href="{{ path('app_repavis_index') }}">Non</a>
                                        <button class="btn btn-primary">{{ button_label|default('Oui') }}</button>
                                    </div>
                                </div>

                            </div>
                                <br>
                            <div class="row mb-3">
                                <h5> Si besoin changer votre reponse :  </h5>
                                <div class="col-sm-10">
                                    {{ form_widget(form.reponse, { 'attr': {'class':'form-control' } }) }}
                                    {{ form_errors(form.reponse, { 'attr': {'class':'text-danger' } }) }}
                                </div>
                            </div>

                            {{ form_end(form) }}<!-- End General Form Elements -->

                        </div>
                    </div>

                </div>


            </div>
        </section>

    </main><!-- End #main -->

    <a href="{{ path('app_repavis_index') }}">back to list</a>

    {{ include('repavis/_delete_form.html.twig') }}
{% endblock %}
