{% extends 'base.html.twig' %}


{% block body %}










        <main id="main" class="main">




            <h1 style="color: #0a53be">les commentaires</h1>

            <section class="section">
                <div class="row">
                    <div class="col-lg-12">

                        <div class="card">

                            <div class="card-body">


                                <!-- Table with stripped rows -->

                                <div class="dataTable-top">


                                </div>
                                <div class="dataTable-container">
                                    <table class="table datatable dataTable-table">

                                        <thead>
                                        <tr>

                                            <th scope="col" data-sortable="" style="width: 15%;">
                                                <a href="#" class="dataTable-sorter" > <h6 style="color: #0a53be;font-weight: bolder;">Utilisateur</h6></a>
                                            </th>

                                            <th scope="col" data-sortable="" style="width: 20%;">
                                                <a href="#" class="dataTable-sorter"><h5 style="color: #0a53be;font-weight: bolder">sujets</h5></a>
                                            </th>
                                            <th scope="col" data-sortable="" >
                                                <a href="#" class="dataTable-sorter"><h5 style="color: #0a53be;font-weight: bolder">commentaires</h5></a>
                                            </th>
                                            <th scope="col" data-sortable="" style="width: 5%;">

                                            </th>


                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for commentaire in commentaires %}
                                            <tr>
                                                <td>{{ commentaire.numeroutilisateur.nomclient }}</td>

                                                <td>{{ commentaire.idforum.sujetforum}}</td>
                                                <td>{{ commentaire.contenucommentaire}}</td>






                                                <td>
                                                    {{ include('commentaires/_delete_form.html.twig') }}





                                                </td>

                                            </tr>

                                        {% else %}
                                            <tr>
                                                <td colspan="3">no records found</td>
                                            </tr>
                                        {% endfor %}

                                        </tbody>
                                    </table>
                                </div>

                                <!-- End Table with stripped rows -->
                                <div class="dataTable-search" >
                                    <input class="dataTable-input" placeholder="rechercher..." type="text" style="border-color: #0a53be;width: 15%">  </div>

                            </div>
                            <br>
                        </div>
                    </div>

                </div>
                </div>
            </section>
        </main><!-- End #main -->










{% endblock %}
