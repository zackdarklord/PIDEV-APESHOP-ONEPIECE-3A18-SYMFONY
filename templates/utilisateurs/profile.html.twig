{% extends 'base.html.twig' %}

{% block title %}profile{% endblock %}
{% block sidebar %}{% endblock %}
{% block header %}{% endblock %}
{% block footer %}{% endblock %}
{% block body %}
<div class="d-flex align-center justify-content-center" style="padding-top: 50px">
    <div class="col-xl-4">

        <div class="card d-flex">
            <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">

                <img src="{{  vich_uploader_asset(utilisateur, 'imageFile')}}" alt="Profile" class="rounded-circle h-25 w-25">
                <h2>{{ utilisateur.username }}</h2>
                <h3>Ape Shop Client</h3>
                <div class="social-links mt-2">
                    <a href="#" class="twitter"><i class="bi bi-twitter"></i></a>
                    <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
                    <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></a>
                </div>

            </div>
            <hr style="color:blue;">
            <div class="card-body">
            <div class="tab-content pt-2">

                <div class="tab-pane fade show active profile-overview" id="profile-overview">
                    <h5 class="card-title">About</h5>
                    <p class="small fst-italic">Ape Shop {{ utilisateur.role|upper }}.</p>

                    <h5 class="card-title">Profile Details</h5>

                    <div class="row">
                        <div class="col-lg-3 col-md-4 label ">Full Name</div>
                        <div class="col-lg-9 col-md-8">{{  app.session.get ('username') }}</div>
                    </div>





                    <div class="row">
                        <div class="col-lg-3 col-md-4 label">Country</div>
                        <div class="col-lg-9 col-md-8">TUNISIA</div>
                    </div>

                    <div class="row">
                        <div class="col-lg-3 col-md-4 label">Address</div>
                        <div class="col-lg-9 col-md-8">{{ utilisateur.adresse }} .</div>
                    </div>

                    <div class="row">
                        <div class="col-lg-3 col-md-4 label">Phone</div>
                        <div class="col-lg-9 col-md-8">(+216) {{ utilisateur.numtel }}</div>
                    </div>

                    <div class="row">
                        <div class="col-lg-3 col-md-4 label">Email</div>
                        <div class="col-lg-9 col-md-8">{{ utilisateur.email }}</div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3 col-md-4 label">edit my profile</div>
                        <div class="col-lg-9 col-md-8"> <a class="btn-primary w-75" href="{{ path('app_utilisateurs_editu', {'numeroutilisateurs': utilisateur.numeroutilisateurs}) }}">edit</a></div>
                    </div>

                </div>
        </div>
            </div>
            <a class="btn-primary d-flex align-center justify-content-center" href="{{ path('apeshop_home') }}">return to home</a>
    </div>


</div>

{% endblock %}