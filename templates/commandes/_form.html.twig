
{% block body %}
    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Modifier le statut</h1>

        </div><!-- End Page Title -->

        <section class="section">
            <div class="row">
                <div class="col-lg-6">

                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Selectionner un statut</h5>

                            <!-- General Form Elements -->
                            {{ form_start(form ,{ attr: {novalidate:'novalidate' } }) }}

                            <div class="row mb-3">
                                <div class="row mb-3">
                                    <label for="inputText"><h3>Statut</h3></label>
                                    <div class="col-sm-10">
                                        {{ form_widget(form.statut, { 'attr': {'class':'form-label' } }) }}

                                    </div>
                                </div>


                            </div>




                            <button class="btn btn-primary">{{ button_label|default('Sauvegarder') }}</button>


                            {{ form_end(form) }}<!-- End General Form Elements -->

                        </div>
                    </div>

                </div>


            </div>
        </section>

    </main><!-- End #main -->
{% endblock %}